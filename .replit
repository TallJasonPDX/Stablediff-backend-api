run = ["uvicorn", "main:app", "--host", "0.0.0.0", "--reload"]
modules = ["python-3.11", "postgresql-16"]

hidden = [".pythonlibs"]

[nix]
channel = "stable-24_05"

[deployment]
run = ["uvicorn", "main:app", "--host", "0.0.0.0"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 8000
externalPort = 80

[workflows]
runButton = "Run"

[[workflows.workflow]]
name = "Run"
author = 37602681
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uvicorn main:app --host 0.0.0.0 --port 8000 --reload"

[[workflows.workflow]]
name = "Run Tests"
author = 37602681
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pytest tests/"

[[workflows.workflow]]
name = "Test Endpoints"
author = 37602681
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python scripts/test_endpoints.py"

[objectStorage]
defaultBucketID = "replit-objstore-d4f32fc1-c78a-4a3b-8a54-a993232be774"
